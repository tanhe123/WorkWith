<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    android:background="@drawable/background_login"
    tools:context="com.xiayule.workwithclient.ui.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="爱协作"
            android:textColor="@color/app_lable"
            android:textSize="@dimen/font_super_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:background="@drawable/background_login_div"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:layout_marginTop="@dimen/div_margin_top"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/username"
                android:drawablePadding="@dimen/drawer_left_padding"
                android:drawableLeft="@drawable/login_icon_username"
                android:hint="用户名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@id/password"
                android:hint="密码"
                android:drawablePadding="@dimen/drawer_left_padding"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/login_icon_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.indris.material.RippleView
            android:layout_marginTop="@dimen/margin_large"
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录 "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/login_button_selector"
            android:gravity="center"
            ripple:alphaFactor="0.5"
            ripple:rippleColor="#a5c03034"
            ripple:hover="true"
            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="没有帐号?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_marginLeft="3dp"
            android:autoLink="web"
            android:text="@string/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

       <!-- <Button
            android:id="@+id/bt_register"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
-->
        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="40dp"
            android:text="这是 Logo"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>