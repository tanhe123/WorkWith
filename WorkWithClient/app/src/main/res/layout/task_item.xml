<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/projects_item_selector"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:id="@id/complete"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="任务名称: "
                android:textSize="@dimen/font_small"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_marginLeft="@dimen/item_margin_label"
                android:textSize="@dimen/font_large"
                android:singleLine="true"
                android:id="@id/title" />

        </LinearLayout>

        <ImageView
            style="@style/line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="项目简介: "
                android:textSize="@dimen/font_small"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="desc"
                android:layout_marginLeft="@dimen/item_margin_label"
                android:textSize="@dimen/font_medim"
                android:textColor="@color/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/desc"
                />

        </LinearLayout>


        <!-- 显示时间 -->
        <LinearLayout
            android:id="@id/ll_time"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="截至日期"
                android:textSize="@dimen/font_small"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<!--            <ImageView
                android:layout_marginLeft="@dimen/item_margin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/badge_date"/>-->

            <TextView
                android:id="@id/time"
                android:drawableLeft="@drawable/badge_date"
                android:layout_marginLeft="@dimen/item_margin_label"
                android:textSize="@dimen/font_medim"
                android:drawablePadding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:padding="4dp"
                android:background="@drawable/tv_shape_red"
                android:text="2014-08-10"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
